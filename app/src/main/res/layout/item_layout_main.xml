<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/item_bg"
    >
    <data>
        <variable
            name="journey"
            type="com.example.tracktraveldisruptionsapp.model.Journey" />
        <variable
            name="journeyLeg"
            type="com.example.tracktraveldisruptionsapp.model.JourneyLeg" />
    </data>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/journeyLineImg"
        android:layout_width="30dp"
        android:layout_height="150dp"
        android:src="@drawable/journeyok"
        app:layout_constraintTop_toBottomOf="@id/heading"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:paddingBottom="15dp"
        />



    <LinearLayout
        android:gravity="center"
        android:id="@+id/heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
       >
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Journey to "
            android:textSize="25sp"
            android:textColor="#5c3d99"
            app:layout_constrainedWidth="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />

        <TextView
            android:id="@+id/cityTo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:hint="Birmingham"
            android:text="@{journey.destination}"
            android:textColor="#5c3d99"
            android:textSize="25sp"
            app:layout_constraintStart_toEndOf="@+id/header_title"
            app:layout_constraintTop_toTopOf="parent" />
    </LinearLayout>

    <TableLayout
        app:layout_constrainedWidth="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/heading"
        app:layout_constraintStart_toEndOf="@id/journeyLineImg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:textAlignment="textEnd"
                android:text="From: "
                />
            <TextView
                android:id="@+id/fromText"
                tools:hint="London"
                android:text="@{journey.origin}"

                />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:textAlignment="textEnd"
                android:text="To: "
                />
            <TextView
                android:id="@+id/toText"
                tools:hint="Birmingham"
                android:text="@{journey.destination}"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:textAlignment="textEnd"
                android:text="Frequency: "
                />
            <LinearLayout
                android:id="@+id/frequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
                >
                <TextView
                    android:id="@+id/freqM"
                    android:text="M"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    />
                <TextView
                    android:id="@+id/freqTu"
                    android:text="T"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="3dp"
                    />
                <TextView
                    android:id="@+id/freqW"
                    android:text="W"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="3dp"
                    />
                <TextView
                    android:id="@+id/freqTh"
                    android:text="T"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="3dp"
                    />
                <TextView
                    android:id="@+id/freqF"
                    android:text="F"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="3dp"
                    />
                <TextView
                    android:id="@+id/freqSat"
                    android:text="S"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="3dp"
                    />
                <TextView
                    android:id="@+id/freqSun"
                    android:text="S"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="3dp"
                    />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:textAlignment="textEnd"
                android:text="Departure Time: "
                />
            <TextView
                android:id="@+id/departTimeText"
                tools:hint="14.00"
                android:text="@{journey.departureTime}"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:textAlignment="textEnd"
                android:text="Transport: "
                />
            <TextView
                android:id="@+id/TransportText"
                tools:hint="Train"
                android:text="@{journeyLeg.transportProvider}"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:layout_marginTop="10dp"
                android:textAlignment="textEnd"
                android:hint="Service On Time"
                />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</layout>