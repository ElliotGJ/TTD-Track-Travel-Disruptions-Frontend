<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            tools:context=".ui.addjourney.NewJourneyActivity">

        <TextView
                android:id="@+id/header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="New journey"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#5B3198"
                android:gravity="center"
                android:layout_marginTop="300dp"
                app:layout_constraintBottom_toTopOf="@+id/form_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
                android:id="@+id/form_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                app:cardBackgroundColor="#7DE09D"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:padding="16dp">


                <TextView
                        android:id="@+id/from_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="From:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/from_input"
                        app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                        android:id="@+id/from_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/from_label"
                        app:layout_constraintStart_toEndOf="@id/from_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/from_label"/>


                <TextView
                        android:id="@+id/to_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="To:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/from_input"
                        app:layout_constraintStart_toStartOf="parent"/>

                <EditText
                        android:id="@+id/to_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/to_label"
                        app:layout_constraintStart_toEndOf="@id/to_label"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/to_label"/>


                <TextView
                        android:id="@+id/departure_time_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Departure Time:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintTop_toBottomOf="@id/to_input"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBaseline_toBaselineOf="@+id/departure_time_input"/>

                <EditText
                        android:id="@+id/departure_time_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="HH:MM"
                        android:inputType="time"
                        app:layout_constraintTop_toBottomOf="@id/departure_time_label"
                        app:layout_constraintStart_toEndOf="@id/departure_time_label"
                        app:layout_constraintEnd_toEndOf="parent"/>


                <TextView
                        android:id="@+id/frequency_label"
                        android:layout_marginBottom="50sp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Frequency of travel:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/departure_time_input"
                        app:layout_constraintEnd_toEndOf="parent"/>

<LinearLayout
        android:id="@+id/days_of_week"
        app:layout_constraintTop_toBottomOf="@id/frequency_label"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <Button
            android:layout_width="wrap_content"
            android:background="@drawable/button"
            android:layout_height="wrap_content"
            android:minWidth="5sp"
            android:text="M"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/frequency_label"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:layout_width="wrap_content"
            android:background="@drawable/button"
            android:layout_height="wrap_content"
            android:minWidth="5sp"
            android:text="M"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/frequency_label"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:layout_width="wrap_content"
            android:background="@drawable/button"
            android:layout_height="wrap_content"
            android:minWidth="5sp"
            android:text="M"
            android:textSize="11sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/frequency_label"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:layout_width="wrap_content"
            android:background="@drawable/button"
            android:layout_height="wrap_content"
            android:minWidth="5sp"
            android:text="M"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/frequency_label"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:layout_width="wrap_content"
            android:background="@drawable/button"
            android:layout_height="wrap_content"
            android:minWidth="5sp"
            android:text="M"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/frequency_label"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:layout_width="wrap_content"
            android:background="@drawable/button"
            android:layout_height="wrap_content"
            android:minWidth="5sp"
            android:text="M"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/frequency_label"
            app:layout_constraintStart_toStartOf="parent"/>
    <Button
            android:layout_width="wrap_content"
            android:background="@drawable/button"
            android:layout_height="wrap_content"
            android:minWidth="5sp"
            android:text="M"
            android:textSize="10sp"
            android:textColor="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/frequency_label"
            app:layout_constraintStart_toStartOf="parent"/>



</LinearLayout>



                <TextView
                        android:id="@+id/mode_of_travel_label"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Mode of travel:"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/days_of_week"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintHorizontal_bias="0.0"/>
                <Button
                        android:id="@+id/public_transport_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="public transport"
                        android:backgroundTint="#5B3198"
                        android:textColor="@android:color/white"
                        app:layout_constraintWidth_percent="0.48"
                        app:layout_constraintTop_toBottomOf="@+id/mode_of_travel_label"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/car_button"
                        app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"/>

                <Button
                        android:id="@+id/car_button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="car"
                        android:backgroundTint="#5B3198"
                        android:textColor="@android:color/white"
                        app:layout_constraintWidth_percent="0.48"
                        app:layout_constraintTop_toBottomOf="@+id/mode_of_travel_label"
                        app:layout_constraintStart_toEndOf="@+id/public_transport_button"
                        app:layout_constraintEnd_toEndOf="parent"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:contentDescription="Back"
                android:src="@android:drawable/ic_menu_revert"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:backgroundTint="#5B3198" />

        <Button
                android:id="@+id/button_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Next"
                android:backgroundTint="#5B3198"
                android:textColor="@android:color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
