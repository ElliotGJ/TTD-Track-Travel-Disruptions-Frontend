<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="journey"
                type="com.example.tracktraveldisruptionsapp.model.Journey" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.addjourney.NewJourneyActivity">


        <TextView
                android:id="@+id/appTitle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:text="     Track Travel Disruptions"
                android:textColor="@color/white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintStart_toEndOf="parent"
                android:background="#301466" />

        <TextView
                android:id="@+id/header"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:gravity="bottom|center"
                android:textSize="35sp"
                android:text="Edit Journey"
                android:textColor="#5c3d99"
                app:layout_constraintTop_toBottomOf="@id/appTitle"
                app:layout_constraintBottom_toTopOf="@+id/form_container"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.cardview.widget.CardView
                android:id="@+id/form_container"
                android:layout_width="0dp"
                android:layout_margin="8dp"
                android:layout_height="wrap_content"

                app:cardBackgroundColor="#7DE09D"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:layout_constraintTop_toBottomOf="@id/header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="450dp"
                    android:padding="4dp">

                <LinearLayout
                        android:id="@+id/starting"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="20dp"
                        android:padding="8dp">

                    <ImageView
                            android:layout_width="70dp"
                            android:layout_height="80dp"
                            android:src="@drawable/journeyline"
                            android:layout_gravity="center_vertical"/>

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="18dp"
                            android:layout_marginStart="1dp">

                        <TextView
                                android:id="@+id/from_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="From: "
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>

                        <TextView
                                android:textColor="@color/white"
                                android:id="@+id/from_input"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/down_arrow"
                                app:layout_constraintTop_toTopOf="@id/from_label"
                                app:layout_constraintStart_toEndOf="@id/from_label"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="@id/from_label"
                                android:background="@drawable/borderbox"

                        />

                        <TextView
                                android:id="@+id/to_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="16dp"
                                android:text="To: "
                                android:textSize="16sp"
                                android:textStyle="bold"
                                app:layout_constraintTop_toBottomOf="@id/from_input"
                                app:layout_constraintEnd_toEndOf="@+id/from_label"/>

                        <TextView
                                android:textColor="@color/white"
                                android:id="@+id/to_input"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:drawableEnd="@drawable/down_arrow"
                                app:layout_constraintTop_toTopOf="@id/to_label"
                                app:layout_constraintStart_toEndOf="@id/to_label"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="@id/to_label"
                                android:background="@drawable/borderbox"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
                <LinearLayout
                        android:id="@+id/departure_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="30dp"
                        app:layout_constraintTop_toBottomOf="@id/starting">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Departure Time: "
                            android:textSize="16sp"
                            android:textStyle="bold"
                    />
                    <Button
                            android:id="@+id/departure_time_input"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:minHeight="48dp"
                            android:hint="HH:MM"
                    />
                </LinearLayout>


                <LinearLayout
                        android:id="@+id/week"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="20dp"
                        app:layout_constraintTop_toBottomOf="@id/departure_time">


                    <TextView
                            android:id="@+id/frequency_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Frequency of travel:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="center"/>

                </LinearLayout>


                <LinearLayout
                        android:id="@+id/days_of_week"
                        app:layout_constraintTop_toBottomOf="@id/week"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:gravity=""
                        android:layout_height="wrap_content">

                    <Button
                            android:id="@+id/button_mon"
                            android:padding="0dp"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="M"
                            android:tag="Mon"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:background="@drawable/button"
                            android:textColor="@color/white"
                            android:layout_marginEnd="8dp"/>

                    <Button
                            android:id="@+id/button_tue"
                            android:padding="0dp"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="T"
                            android:tag="Tue"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:background="@drawable/button"
                            android:textColor="@color/white"
                            android:layout_marginEnd="8dp"/>
                    <Button
                            android:id="@+id/button_wed"
                            android:padding="0dp"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="W"
                            android:tag="Wed"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:background="@drawable/button"
                            android:textColor="@color/white"
                            android:layout_marginEnd="8dp"/>
                    <Button
                            android:id="@+id/button_thu"
                            android:padding="0dp"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="T"
                            android:tag="Thu"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:background="@drawable/button"
                            android:textColor="@color/white"
                            android:layout_marginEnd="8dp"/>
                    <Button
                            android:id="@+id/button_fri"
                            android:padding="0dp"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="F"
                            android:tag="Fri"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:background="@drawable/button"
                            android:textColor="@color/white"
                            android:layout_marginEnd="8dp"/>
                    <Button
                            android:id="@+id/button_sat"
                            android:padding="0dp"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="S"
                            android:tag="Sat"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:background="@drawable/button"
                            android:textColor="@color/white"
                            android:layout_marginEnd="8dp"/>
                    <Button
                            android:id="@+id/button_sun"
                            android:padding="0dp"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:text="S"
                            android:tag="Sun"
                            android:gravity="center"
                            android:textSize="20sp"
                            android:background="@drawable/button"
                            android:textColor="@color/white"
                            android:layout_marginEnd="8dp"/>

                </LinearLayout>


                <LinearLayout
                        android:id="@+id/mode_of_travel_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="50px"
                        app:layout_constraintTop_toBottomOf="@+id/days_of_week">

                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Mode of travel:"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="center"
                    />
                </LinearLayout>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        app:layout_constraintTop_toBottomOf="@id/mode_of_travel_label"
                >

                    <Button
                            android:id="@+id/public_transport_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="public transport"
                            android:layout_marginRight="40dp"
                            android:backgroundTint="#5C3D99"
                            android:textColor="@android:color/white"
                    />

                    <Button
                            android:id="@+id/car_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="car"
                            android:backgroundTint="#5C3D99"
                            android:textColor="@android:color/white"
                    />

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:contentDescription="Back"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:backgroundTint="#38A3A5"
                android:src="@android:drawable/ic_menu_revert"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/button_next"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:text="Next"
                android:backgroundTint="#38A3A5"
                android:textColor="#5B3198"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
